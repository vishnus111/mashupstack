<%- include('layout', { body: `
    <h2>Your Weights</h2>
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Weight</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% weights.forEach(function(weight) { %>
                <tr>
                    <td><%= new Date(weight.date).toLocaleDateString() %></td>
                    <td><%= weight.weight %></td>
                    <td>
                        <form action="/weights/edit/<%= weight._id %>" method="POST">
                            <input type="number" step="0.1" name="weight" value="<%= weight.weight %>" required>
                            <button type="submit">Edit</button>
                        </form>
                        <form action="/weights/delete/<%= weight._id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <div class="pagination">
        <% if (current > 1) { %>
            <a href="?page=<%= current - 1 %>">&laquo; Previous</a>
        <% } %>
        <% if (current < pages) { %>
            <a href="?page=<%= current + 1 %>">Next &raquo;</a>
        <% } %>
    </div>
`) %>
